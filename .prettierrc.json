{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 160,
        "tabWidth": 1,
        "useTabs": true,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "trailingComma": "es5",
        "tabWidth": 1,
        "useTabs": true,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "bracketSpacing": true,
        "arrowParens": "always",
        "endOfLine": "lf",
        "printWidth": 150
      }
    }
  ]
}
